<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">

    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss} %-5level %c{1} — %msg%n"/>
        </Console>

        <File name="FileLog" fileName="logs/revhire.log" append="true">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} %-5level %c — %msg%n"/>
        </File>
    </Appenders>

    <Loggers>
        <!-- App loggers at INFO level -->
        <Logger name="com.revhire" level="info" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="FileLog"/>
        </Logger>

        <!-- Root at WARN to suppress noisy library logs -->
        <Root level="warn">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>

</Configuration>
